<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="4dp"
    android:layout_width="160dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/itemsp_image"
            android:src="@drawable/ic_media_24"
            android:layout_width="match_parent"
            android:layout_height="150dp">
        </ImageView>
        <TextView
            android:id="@+id/itemsp_ten"
            android:text="Son Tint"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/itemsp_gia"
            android:text="Giá: 199đ"
            android:textSize="17sp"
            android:textColor="#E54646"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
        <ImageView
            android:src="@drawable/iconnew_h512"
            android:layout_gravity="top|right"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </ImageView>
    </FrameLayout>

</androidx.cardview.widget.CardView>